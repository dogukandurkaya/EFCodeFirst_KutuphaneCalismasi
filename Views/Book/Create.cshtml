@model EF_CodeFirst.Models.Entities.Book
@{
    ViewData["Title"] = "Create";
}

<h1 class="bg-dark text-light">Yeni Kitap</h1>

<div class="row bg-dark text-light">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Kitap Ad</label>
                <input type="text" asp-for="BookName" class="form-control">
                <label class="control-label">Kitap Yayınlanma Yılı</label>
                <input type="text" asp-for="BookYearOfPublication" class="form-control">
                <label class="control-label">Kitap Baskı Sayısı</label>
                <input type="text" asp-for="BookEditionNumber" class="form-control">
                <label class="control-label">Kitap Sayfa Sayısı</label>
                <input type="text" asp-for="BookNumberOfPages" class="form-control">
                <label asp-for="CategoryId" class="control-label">Kategori Türü</label>
                <select asp-for="CategoryId" class="form-select    form-control" asp-items="ViewBag.Category"></select>
                <label asp-for="AuthorId" class="control-label">Yazar</label>
                <select asp-for="AuthorId" class="form-select    form-control" asp-items="ViewBag.Author"></select>
                <label asp-for="PublisherId" class="control-label">Yayınevi</label>
                <select asp-for="PublisherId" class="form-select    form-control" asp-items="ViewBag.Publisher"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Kitaplar Sayfasına Dön</a>