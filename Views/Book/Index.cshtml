@model List<EF_CodeFirst.Models.Entities.Book>
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-dark text-light">Kitaplar</h1>

<a asp-action="Create">Yeni Kitap Ekle</a>

<table class="table table-dark text-white w-100">
    <thead>
        <tr>
            <th>Kitap Id</th>
            <th>Kitap Adı</th>
            <th>Kitap Yayınlanma Yılı</th>
            <th>Kitap Baskı Sayısı</th>
            <th>Kitap Sayfa Sayısı</th>
            <th>Silinme Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kitap in Model)
        {
            <tr>
                <td>@kitap.BookId</td>
                <td>@kitap.BookName</td>
                <td>@kitap.BookYearOfPublication</td>
                <td>@kitap.BookEditionNumber</td>
                <td>@kitap.BookNumberOfPages</td>
                <td>@kitap.IsDeleted</td>
                <td class="d-flex">
                    <a class="btn mx-1 btn-sm btn-success" asp-action="Details" asp-route-id="@kitap.BookId">Detaylar</a>
                    <a class="btn mx-1 btn-sm btn-warning" asp-action="Edit" asp-route-id="@kitap.BookId">Düzenle</a>
                    <a class="btn mx-1 btn-sm btn-danger" asp-action="Delete" asp-route-id="@kitap.BookId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

