@model EF_CodeFirst.Models.Entities.Category
@{
    ViewData["Title"] = "Create";
}

<h1 class="bg-dark text-danger">Yeni Kategori</h1>

<div class="row bg-dark text-danger">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Kategori</label>
                <input type="text" asp-for="CategoryName" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Kategori Türleri Sayfasına Dön</a>