@model EF_CodeFirst.Models.Entities.Category
@{
    ViewData["Title"] = "Edit";
}

<h1 class="bg-dark text-light">Kategori Türü Düzenle</h1>

<div class="row bg-dark text-light">
    <div class="col-md-4">
        <form asp-action="Edit">
             <div class="form-group">
                <label class="control-label">Kategori Id</label>
                <label class="control-label" asp-for="CategoryId">@Model.CategoryId</label><br>
                <input type="hidden" asp-for="CategoryId">
                <label class="control-label">Kategori Adı</label>
                <input class="form-control" type="text" asp-for="CategoryName">
                  <label class="control-label">Kategori Açıklaması</label>
                <input class="form-control" type="text" asp-for="CategoryDescription">
            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Kategori Türleri Sayfasına Dön</a>