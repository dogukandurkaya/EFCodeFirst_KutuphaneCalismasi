@model List<EF_CodeFirst.Models.Entities.Publisher>
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-dark text-light">Yayınevi</h1>

<a asp-action="Create">Yeni Yayınevi Ekle</a>

<table class="table table-dark w-75">
    <thead>
        <tr>
            <th>Yayınevi Id</th>
            <th>Yayınevi Adı</th>
            <th>Yayınevi Şehri</th>
            <th>Yayınevi Mail</th>
            <th>Silinme Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yayınevi in Model)
        {
            <tr>
                <td>@yayınevi.PublisherId</td>
                <td>@yayınevi.PublisherName</td>
                <td>@yayınevi.PublisherCity</td>
                <td>@yayınevi.PublisherMail</td>
                <td>@yayınevi.IsDeleted</td>
                <td class="d-flex">
                    <a class="btn mx-1 btn-sm btn-success" asp-action="Details" asp-route-id="@yayınevi.PublisherId">Detaylar</a>
                    <a class="btn mx-1 btn-sm btn-warning" asp-action="Edit" asp-route-id="@yayınevi.PublisherId">Düzenle</a>
                    <a class="btn mx-1 btn-sm btn-danger" asp-action="Delete" asp-route-id="@yayınevi.PublisherId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>