@model EF_CodeFirst.Models.Entities.Publisher
@{
    ViewData["Title"] = "Edit";
}

<h1 class="bg-dark text-light">Yayınevi Bilgisi Düzenle</h1>

<div class="row bg-dark text-light">
    <div class="col-md-4">
        <form asp-action="Edit">
             <div class="form-group">
                <label class="control-label">Yayınevi Id</label>
                <label class="control-label" asp-for="PublisherId">@Model.PublisherId</label><br>
                <input type="hidden" asp-for="PublisherId">
                <label class="control-label">Yayınevi Adı</label>
                <input class="form-control" type="text" asp-for="PublisherName">
                  <label class="control-label">Yayınevi Şehri</label>
                <input class="form-control" type="text" asp-for="PublisherCity">
            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<a asp-action="Index">Yayınevi Sayfasına Dön</a>